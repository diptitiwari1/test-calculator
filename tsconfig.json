{
    "include": ["src/**/*"],
    "compilerOptions": {
      "target": "es5",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "module":"esnext",
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "lib": ["dom", "es2015"],
    }
  }